    <modelVersion>4.0.0</modelVersion>
    <groupId>org.motechproject.referencedata</groupId>
    <version>0.1-SNAPSHOT</version>
    <artifactId>reference-data</artifactId>
    <packaging>pom</packaging>
    <!--<modules>-->
