<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender class="org.apache.log4j.RollingFileAppender" name="logfile">
        <param value="ananya-reference-data.log" name="File"/>
        <param name="Append" value="true"/>
        <param name="MaxFileSize" value="4096KB"/>
        <param name="maxBackupIndex" value="5"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param value="[%t] - %d %p [%c] - %m%n" name="ConversionPattern"/>
        </layout>
    </appender>
    <appender name="emailappender" class="org.apache.log4j.net.SMTPAppender">
        <param name="BufferSize" value="5"/>
        <param name="SMTPHost" value=""/>
        <param name="From" value=""/>
        <param name="To" value=""/>
        <param name="Subject" value="Ananya Reference Data Error"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param value="[%t] - %d %p [%c] - %m%n" name="ConversionPattern"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMin" value="error"/>
            <param name="LevelMax" value="fatal"/>
        </filter>
    </appender>
    <logger name="org.springframework">
        <level value="error"/>
    </logger>
    <logger name="org.ektorp">
        <level value="error"/>
    </logger>
    <logger name="org.apache">
        <level value="error"/>
    </logger>
    <logger name="org.quartz">
        <level value="error"/>
    </logger>
    <logger name="org.motechproject">
        <level value="info"/>
    </logger>
    <root>
        <priority value="info"/>
        <appender-ref ref="logfile"/>
    </root>
</log4j:configuration>
