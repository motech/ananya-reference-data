<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:property-placeholder location="classpath*:*.properties"/>
    <util:properties id="activemqProperties" location="classpath:/activemq.properties"/>
    <util:properties id="apiKeys" location="classpath:/apiKeys.properties"/>
    <import resource="classpath:applicationPlatformServerAPI.xml"/>

    <context:component-scan base-package="org.motechproject.ananya.referencedata"/>

    <import resource="classpath:applicationContext-domain.xml"/>
    <import resource="classpath:applicationContext-services.xml"/>

    <context:spring-configured/>
    <context:annotation-config/>

</beans>
